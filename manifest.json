{
  "name": "ICColours",
  "description" : "Extension to modify a pages css to aid color blind users.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["jquery-3.3.1.min.js","background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "hello.html"
  },
  "content_scripts": [{
    "js": ["jquery-3.3.1.min.js", "background.js"],
    "matches": ["http://*/*", "https://*/*"],
    "css": ["style.css"],
    "web_accessible_resources": ["style.css"]
  }],
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens hello.html"
    }
  }
}

